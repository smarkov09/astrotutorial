---
import BaseLayout from '../layouts/BaseLayout.astro'
const pageTitle = "About me"

const identity = {
    firstName: "John",
    lastName: "Doe",
    country: "India",
    occupation: "Technician",
    hobbies: ["games", "boardgames", "tv"]
}

const skills = ["html", "css", "python", "c#"]

const happy = true
const finished = false
const goal = 3

const operatingSystem = "Linux"
const quantity = 3
const footwear = "boots"
const student = false

const skillColor = "navy"
const fontWeight = "bold"
const textCase = "uppercase"
---

<BaseLayout pageTitle={pageTitle}>
    <p>Here are a few facts about me:</p>

    <ul>
        <li>
            My name is {identity.firstName} {identity.lastName}
        </li>
        <li>
            I live in {identity.country} and I work as a {identity.occupation}.
        </li>
        {identity.hobbies.length >= 2 && <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>}
    </ul>
    <p>My skills:</p>
    <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
    <hr>
    <h3>Conditionals</h3>
    {happy && <p>I am happy to be learning Astro!!!</p>}

    {finished && <p>I finished this tutorial!</p>}

    {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}
    <hr>
    <h4>Exc</h4>
    <p>{operatingSystem}</p>
    {student && <p>I am still in school.</p>}
    <p>I have {quantity + 8} pairs of {footwear}</p>
    {operatingSystem === "MacOS" ? <p>I am using a Mac.</p> : <p>I am not using a Mac.</p>}

</BaseLayout>
